<h1>Listing wikis</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%=  wiki.title %></td>
        <td><%=  wiki.body %></td>
        <td><%= link_to 'Show', wiki %></td>
        <% if user_signed_in? %>
				
        <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
				
        <td><%= link_to 'Delete', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Wiki', new_wiki_path %>
<% end %>



